<Window x:Class="SpaceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SpaceApp"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="18"       
        FontFamily="{MaterialDesign:MaterialDesignFont}"
        Title="SpaceApp" Height="Auto" Width="Auto">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="LearnBtn" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="5px" Background="{StaticResource PrimaryHueLightBrush}" Foreground="Black">Обучить модель</Button>
            <Button x:Name="LoadBtn" Grid.Row="1" Grid.Column="0" Margin="5px" Background="{StaticResource SecondaryHueMidBrush}" Foreground="Black">Загрузить модель из файла</Button>
            <Button x:Name="SaveBtn" Grid.Row="1" Grid.Column="1" Margin="5px" Background="{StaticResource SecondaryHueMidBrush}" Foreground="Black">Сохранить модель в файл</Button>
            <Button x:Name="EvaluateBtn" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Background="{StaticResource PrimaryHueLightBrush}" Foreground="Black">Собрать метрики</Button>
        </Grid>
        <Grid x:Name="OutputGrid" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  Foreground="White" Background="#2b2a2a" Style="{StaticResource MaterialDesignScrollViewer}" VerticalScrollBarVisibility="Visible">
                <TextBox x:Name="OutputTxt" IsReadOnly="True" Margin ="5" Cursor="Arrow"></TextBox>
            </ScrollViewer>
            <Button x:Name="ClearBtn" 
                    Grid.Row="1" 
                    Grid.Column="1" 
                    Margin="5px" 
                    Background="{StaticResource PrimaryHueDarkForegroundBrush}" 
                    Foreground="Black"
                    Command="{x:Static local:MainWindow.ClearConsoleCmd}">
                Очистить
                <Button.CommandBindings>
                    <CommandBinding 
                        Command="{x:Static local:MainWindow.ClearConsoleCmd}"
                        Executed="ClearConsoleCmdExecuted"
                        CanExecute="ButtonCanExecute"></CommandBinding>
                </Button.CommandBindings>
            </Button>
        </Grid>
        <Grid x:Name="FormGrid" Margin="5" Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" Background="PowderBlue" Cursor="Arrow">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Margin="5" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">Введите данные спектрального анализа:</TextBlock>

            <Label Margin="5 0 0 0" HorizontalAlignment="Right" FontSize="13" Grid.Row="1" Grid.Column="0">Угол прямого восхождения</Label>
            <TextBox x:Name="AlphaTb" Grid.Row="1" Grid.Column="1"></TextBox>

            <Label Margin="5 0 0 0" HorizontalAlignment="Right" FontSize="13"  Grid.Row="2" Grid.Column="0">Угол склонения</Label>
            <TextBox x:Name="DeltaTb" Grid.Row="2" Grid.Column="1"></TextBox>

            <Label Margin="5 0 0 0" HorizontalAlignment="Right" FontSize="13"  Grid.Row="3" Grid.Column="0">УФ-фильтр в фотометрической системе</Label>
            <TextBox x:Name="UTb" Grid.Row="3" Grid.Column="1"></TextBox>

            <Label Margin="5 0 0 0" HorizontalAlignment="Right" FontSize="13" Grid.Row="4" Grid.Column="0">Зеленый в фотометрической системе</Label>
            <TextBox x:Name="GTb" Grid.Row="4" Grid.Column="1"></TextBox>

            <Label Margin="5 0 0 0" HorizontalAlignment="Right" FontSize="13"  Grid.Row="5" Grid.Column="0">Красный в фотометрической системе</Label>
            <TextBox x:Name="RTb" Grid.Row="5" Grid.Column="1"></TextBox>

            <Label Margin="5 0 0 0" HorizontalAlignment="Right" FontSize="13"  Grid.Row="6" Grid.Column="0">Фильтр ближнего ИК-излучения в фотометрической системе</Label>
            <TextBox x:Name="ITb" Grid.Row="6" Grid.Column="1"></TextBox>

            <Label Margin="5 0 0 0" HorizontalAlignment="Right" FontSize="13"  Grid.Row="7" Grid.Column="0">ИК-фильтр в фотометрической системе</Label>
            <TextBox x:Name="ZTb" Grid.Row="7" Grid.Column="1"></TextBox>

            <Label Margin="5 0 0 0" HorizontalAlignment="Right" FontSize="13"  Grid.Row="8" Grid.Column="0">Столбец камеры</Label>
            <TextBox x:Name="CameraColTb" Grid.Row="8" Grid.Column="1"></TextBox>

            <Label Margin="5 0 0 0" HorizontalAlignment="Right" FontSize="13" Grid.Row="9" Grid.Column="0">Значение красного смещения</Label>
            <TextBox x:Name="RedshiftTb" Grid.Row="9" Grid.Column="1"></TextBox>

            <Label Margin="5 0 0 0" HorizontalAlignment="Right" FontSize="13"  Grid.Row="10" Grid.Column="0">Идентификатор пластины спектрометра в SDSS</Label>
            <TextBox x:Name="PlateTb" Grid.Row="10" Grid.Column="1"></TextBox>

            <Label Margin="5 0 0 0" HorizontalAlignment="Right" FontSize="13"  Grid.Row="11" Grid.Column="0">Модифицированная дата по юлианскому календарю</Label>
            <TextBox x:Name="MJDTb" Grid.Row="11" Grid.Column="1"></TextBox>

            <Label Margin="5 0 0 0" HorizontalAlignment="Right" FontSize="13"  Grid.Row="12" Grid.Column="0">Идентификатор волокна, направляющего свет в фокальную плоскость</Label>
            <TextBox x:Name="FiberIdTb" Grid.Row="12" Grid.Column="1"></TextBox>

            <Button x:Name="PredictBtn" 
                    Grid.Row="13" 
                    Grid.Column="0" 
                    Margin="5px" 
                    Background="{StaticResource PrimaryHueLightBrush}" 
                    Foreground="Black">Одиночное предсказание</Button>
            <Button x:Name="ClearFormBtn" 
                    Grid.Row="13"
                    Grid.Column="1" 
                    Margin="5px" 
                    Background="{StaticResource PrimaryHueDarkForegroundBrush}" 
                    Foreground="Black"
                    Command="{x:Static local:MainWindow.ClearStellarFormCmd}">
                Очистить
                <Button.CommandBindings>
                    <CommandBinding 
                        Command="{x:Static local:MainWindow.ClearStellarFormCmd}"
                        Executed="ClearStellarFormCmdExecuted"
                        CanExecute="ButtonCanExecute"></CommandBinding>
                </Button.CommandBindings>
            </Button>
            
        </Grid>
    </Grid>
</Window>
